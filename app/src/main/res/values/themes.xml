<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Destination" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/my_primary</item>
    </style>

    <style name="Theme.Destination" parent="Base.Theme.Destination" />
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/comment_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/comment_slide_out_bottom</item>

    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/my_secondary</item>
    </style>
    <style name="TourVista" parent="Base.Theme.Destination">
        <item name="android:background">@null</item>
    </style>
</resources>