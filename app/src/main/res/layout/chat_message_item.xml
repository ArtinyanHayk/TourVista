<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/other_user_messages_bkg"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat_layout"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/postLayoutLeft"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Username"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_corner_radius="23"

            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"/>
        <ImageButton
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/get_location"
            android:background="@drawable/add_location"
            android:layout_toStartOf="@id/favorite"
            android:layout_marginEnd="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Hello"
            android:id="@+id/left_chat_textview"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_messages_bkg"
        android:backgroundTint="#ADECF4"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:id="@+id/right_chat_layout">
        <LinearLayout
            android:id="@+id/postLayoutRight"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/poster_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Username"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_period="1000"
            app:iss_corner_radius="18"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"/>
        <ImageButton
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/get_location2"
            android:background="@drawable/add_location"
            android:layout_toStartOf="@id/favorite"
            android:layout_marginEnd="10dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Hello"
            android:id="@+id/right_chat_textview"/>
    </LinearLayout>

</RelativeLayout>