<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout

        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:background="@drawable/other_user_messages_bkg"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/postLayoutLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_margin="4dp"
                android:backgroundTint="@color/my_primary"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon"
                app:civ_border_color="@color/light_gray"
                app:civ_border_width="1px" />

            <TextView
                android:id="@+id/poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:text="Username"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_corner_radius="23"

            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_text_align="CENTER" />

        <ImageButton
            android:id="@+id/get_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/favorite"
            android:background="@drawable/add_location"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/my_messages_bkg"
        android:backgroundTint="#ADECF4"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/postLayoutRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_margin="4dp"
                android:backgroundTint="@color/my_primary"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon"
                app:civ_border_color="@color/light_gray"
                app:civ_border_width="1px" />

            <TextView
                android:id="@+id/poster_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:text="Username"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_corner_radius="18"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_text_align="CENTER" />

        <ImageButton
            android:id="@+id/get_location2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/favorite"
            android:background="@drawable/add_location"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>