<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/other_user_messages_bkg"
        android:backgroundTint="#C6C6C6"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat_layout"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_corner_radius="18"

            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"/>
      <!--  <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/get_location"
            android:src="@drawable/add_location"
            android:visibility="gone"
            android:layout_toStartOf="@id/favorite"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"

            />
            -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Hello"
            android:id="@+id/left_chat_textview"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_messages_bkg"
        android:backgroundTint="#ADECF4"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:id="@+id/right_chat_layout">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone"
            app:iss_period="1000"
            app:iss_corner_radius="18"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"/>
        <!-- <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/get_location2"
            android:src="@drawable/add_location"
            android:visibility="gone"
            android:layout_toStartOf="@id/favorite"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"

            /> -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Hello"
            android:id="@+id/right_chat_textview"/>
    </LinearLayout>

</RelativeLayout>