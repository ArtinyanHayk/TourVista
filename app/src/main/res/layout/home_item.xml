<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:elevation="20dp"
        android:layout_marginVertical="2sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/post_bkg"
        android:layout_marginHorizontal="10px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
               android:layout_marginRight="5dp"
                android:backgroundTint="@color/my_primary"
                android:src="@drawable/person_icon"
                app:civ_border_color="#DDDDDD"
                app:civ_border_width="2px"
                 />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="2h"/>
            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="5dp"

            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"

                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginHorizontal="12dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/like"
                android:background="@drawable/like"

                />


           <!-- <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeAnim"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-9dp"
                android:layout_marginLeft="-9dp"
                android:visibility="invisible"

                app:lottie_rawRes="@raw/like" />-->

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/share"
                android:src="@drawable/share_ic"
                android:layout_toEndOf="@id/comment"
                android:layout_marginStart="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/comment"
                android:src="@drawable/comment"
                android:layout_toEndOf="@id/like"
                android:layout_marginStart="10dp"

                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/get_location"
                android:src="@drawable/add_location"
                android:layout_toStartOf="@id/favorite"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"

                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favorite"
                android:src="@drawable/favorite"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"


                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="10 like"
            android:layout_marginHorizontal="12dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:id="@+id/likeCountTv"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="12dp"
            android:text="Description"
            android:textColor="@color/dark_gray"
            android:id="@+id/descTv"/>


    </LinearLayout>


</RelativeLayout>