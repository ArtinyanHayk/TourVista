<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Цвет фона комментария -->
    <solid android:color="#ECEFF1"/>

    <!-- Закругленные углы -->
    <corners android:radius="8dp"/>

    <!-- Тень для эффекта поднятости комментария -->
    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="2dp"/>
    <size android:width="1dp" android:height="1dp"/>

    <!-- Внешняя тень -->
    <stroke android:color="#BDBDBD" android:width="0.5dp"/>
</shape>